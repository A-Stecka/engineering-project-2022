<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.home.HomeFragment">

    <android.widget.SearchView
        android:id="@+id/search_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:searchIcon="@drawable/icon_search"
        android:closeIcon="@drawable/icon_close"
        android:layout_marginTop="@dimen/components_margin"
        app:layout_constraintBottom_toTopOf="@id/short_story_item_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/short_story_item_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="@dimen/components_margin_small"
        app:layoutManager="LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_widget"
        tools:listitem="@layout/short_story_item" />

    <TextView
        style="@style/Theme.ZPI.Text"
        android:id="@+id/no_stories_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/components_margin_small"
        android:layout_marginHorizontal="@dimen/components_margin"
        android:text="@string/no_stories_home"
        android:textAlignment="center"
        android:justificationMode="inter_word"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_widget" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/prompt_button_highest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/components_margin"
        android:layout_marginVertical="@dimen/components_margin_small"
        android:contentDescription="@string/pick_your_prompt"
        android:scaleX="@dimen/smaller_floating_button_scale"
        android:scaleY="@dimen/smaller_floating_button_scale"
        android:src="@drawable/icon_5"
        app:tint="@color/white"
        app:backgroundTint="@color/wine"
        app:layout_constraintBottom_toTopOf="@id/prompt_button_middle"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/prompt_button_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/components_margin"
        android:layout_marginVertical="@dimen/components_margin_small"
        android:contentDescription="@string/pick_your_prompt"
        android:scaleX="@dimen/smaller_floating_button_scale"
        android:scaleY="@dimen/smaller_floating_button_scale"
        android:src="@drawable/icon_3"
        app:tint="@color/white"
        app:backgroundTint="@color/wine"
        app:layout_constraintBottom_toTopOf="@id/prompt_button_lowest"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/prompt_button_lowest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/components_margin"
        android:layout_marginVertical="@dimen/components_margin_small"
        android:contentDescription="@string/pick_your_prompt"
        android:scaleX="@dimen/smaller_floating_button_scale"
        android:scaleY="@dimen/smaller_floating_button_scale"
        android:src="@drawable/icon_1"
        app:tint="@color/white"
        app:backgroundTint="@color/wine"
        app:layout_constraintBottom_toTopOf="@id/main_prompt_button"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/main_prompt_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/components_margin"
        android:layout_marginBottom="@dimen/components_margin"
        android:contentDescription="@string/pick_your_prompt"
        android:src="@drawable/icon_add"
        app:tint="@color/white"
        app:backgroundTint="@color/wine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>