<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.login.RegisterFragment">

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:id="@+id/fragment_register_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_register_elements"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/fragment_register_app_icon"
            android:layout_width="@dimen/image_regular"
            android:layout_height="@dimen/image_regular"
            android:contentDescription="@string/app_icon_desc"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/app_icon" />

        <TextView
            style="@style/Theme.ZPI.AppName"
            android:id="@+id/fragment_register_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBaseline_toBottomOf="@id/fragment_register_app_icon" />

        <TextView
            style="@style/Theme.ZPI.Text"
            android:id="@+id/fragment_login_info_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/components_margin"
            android:layout_marginHorizontal="@dimen/input_horizontal_margin"
            android:justificationMode="inter_word"
            android:text="@string/register_info"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_register_app_name"
            app:layout_constraintBottom_toTopOf="@id/fragment_register_layout_login"/>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Theme.ZPI.TextInputLayout"
            android:id="@+id/fragment_register_layout_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/components_margin_tiny"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_login_info_text"
            app:layout_constraintBottom_toTopOf="@id/fragment_register_layout_password" >

            <com.google.android.material.textfield.TextInputEditText
                style="@style/Theme.ZPI.Text"
                android:id="@+id/fragment_register_input_login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:hint="@string/login"
                android:gravity="top" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Theme.ZPI.TextInputLayout"
            android:id="@+id/fragment_register_layout_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/components_margin_tiny"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_register_layout_login"
            app:layout_constraintBottom_toTopOf="@id/fragment_register_layout_confirm_password" >

            <com.google.android.material.textfield.TextInputEditText
                style="@style/Theme.ZPI.Text"
                android:id="@+id/fragment_register_input_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPassword"
                android:hint="@string/password"
                android:gravity="top" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Theme.ZPI.TextInputLayout"
            android:id="@+id/fragment_register_layout_confirm_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/components_margin_tiny"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_register_layout_password"
            app:layout_constraintBottom_toTopOf="@id/fragment_register_layout_email">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/Theme.ZPI.Text"
                android:id="@+id/fragment_register_input_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPassword"
                android:hint="@string/confirm_password"
                android:gravity="top" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Theme.ZPI.TextInputLayout"
            android:id="@+id/fragment_register_layout_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/components_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_register_layout_confirm_password"
            app:layout_constraintBottom_toTopOf="@id/fragment_register_register_button">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/Theme.ZPI.Text"
                android:id="@+id/fragment_register_input_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:hint="@string/email"
                android:gravity="top" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            style="@style/Theme.ZPI.Button"
            android:id="@+id/fragment_register_register_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_register_layout_email"
            app:layout_constraintBottom_toTopOf="@id/fragment_register_login_button" />

        <Button
            style="@style/Theme.ZPI.Button"
            android:id="@+id/fragment_register_login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/switch_to_login_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_register_register_button"
            app:layout_constraintBottom_toBottomOf="@id/sign_in_button_google" />

        <Button
            style="@style/Theme.ZPI.GoogleButton"
            android:id="@+id/sign_in_button_google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sign_up_with_google_button"
            app:layout_constraintTop_toBottomOf="@id/fragment_register_login_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>