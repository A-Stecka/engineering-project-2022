<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.login.LoginFragment">

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:id="@+id/fragment_login_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_login_elements"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/fragment_login_app_icon"
            android:layout_width="@dimen/image_large"
            android:layout_height="@dimen/image_large"
            android:contentDescription="@string/app_icon_desc"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/app_icon" />

        <TextView
            style="@style/Theme.ZPI.AppName"
            android:id="@+id/fragment_login_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBaseline_toBottomOf="@id/fragment_login_app_icon" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Theme.ZPI.TextInputLayout"
            android:id="@+id/fragment_login_layout_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/components_margin"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@id/fragment_login_layout_password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_login_app_name" >

            <com.google.android.material.textfield.TextInputEditText
                style="@style/Theme.ZPI.Text"
                android:id="@+id/fragment_login_input_login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:gravity="top"
                android:hint="@string/login" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Theme.ZPI.TextInputLayout"
            android:id="@+id/fragment_login_layout_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/components_margin"
            app:layout_constraintBottom_toTopOf="@id/fragment_login_login_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_login_layout_login">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/Theme.ZPI.Text"
                android:id="@+id/fragment_login_input_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPassword"
                android:gravity="top"
                android:hint="@string/password" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            style="@style/Theme.ZPI.Button"
            android:id="@+id/fragment_login_login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login_button"
            app:layout_constraintBottom_toTopOf="@id/fragment_login_forgot_password_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_login_layout_password" />

        <Button
            style="@style/Theme.ZPI.Button"
            android:id="@+id/fragment_login_forgot_password_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/forgot_password_button"
            app:layout_constraintBottom_toTopOf="@id/fragment_login_forgot_login_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_login_login_button" />

        <Button
            style="@style/Theme.ZPI.Button"
            android:id="@+id/fragment_login_forgot_login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/forgot_login_button"
            app:layout_constraintBottom_toTopOf="@id/fragment_login_register_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_login_forgot_password_button" />

        <Button
            style="@style/Theme.ZPI.Button"
            android:id="@+id/fragment_login_register_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/switch_to_register_button"
            app:layout_constraintBottom_toTopOf="@id/sign_in_button_google"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_login_forgot_login_button" />

        <Button
            style="@style/Theme.ZPI.GoogleButton"
            android:id="@+id/sign_in_button_google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sign_in_with_google_button"
            app:layout_constraintTop_toBottomOf="@id/fragment_login_register_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>