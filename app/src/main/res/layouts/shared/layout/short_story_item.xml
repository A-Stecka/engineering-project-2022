<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/story_list_item"
    android:layout_margin="10dp">

    <TextView
        style="@style/Theme.ZPI.TextTitle"
        android:id="@+id/title_story_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/components_margin_small"
        android:layout_marginVertical="2dp"
        android:text=""
        app:layout_constraintBottom_toTopOf="@id/author_story_item"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/Theme.ZPI.TextAuthor"
        android:id="@+id/author_story_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/components_margin_small"
        android:layout_marginVertical="2dp"
        android:text=""
        app:layout_constraintBottom_toTopOf="@id/content_story_item"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_story_item" />

    <TextView
        style="@style/Theme.ZPI.Text"
        android:id="@+id/content_story_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/components_margin_small"
        android:layout_marginVertical="2dp"
        android:text=""
        android:justificationMode="inter_word"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/author_story_item" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_light"
        android:layout_marginHorizontal="@dimen/components_margin_small"
        android:layout_marginTop="@dimen/components_margin_small"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/content_story_item" />

</androidx.constraintlayout.widget.ConstraintLayout>