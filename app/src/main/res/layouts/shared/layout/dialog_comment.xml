<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/components_margin">

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Theme.ZPI.TextInputLayout"
        android:id="@+id/dialog_comment_input_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="0dp"
        android:scrollbars="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <com.google.android.material.textfield.TextInputEditText
            style="@style/Theme.ZPI.Text"
            android:id="@+id/dialog_comment_input"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_comment_height"
            android:inputType="text|textMultiLine"
            android:minHeight="300dp"
            android:gravity="top"
            android:hint="@string/comment" />

    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>