<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.profile.ChangePictureFragment">

    <ImageView
        android:id="@+id/fragment_picture_back_button"
        android:layout_width="36sp"
        android:layout_height="36sp"
        android:layout_marginTop="@dimen/components_margin"
        android:layout_marginBottom="@dimen/components_margin_small"
        android:layout_marginHorizontal="@dimen/components_margin_small"
        android:contentDescription="@string/back"
        app:srcCompat="@drawable/icon_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/Theme.ZPI.TextLabelBig"
        android:id="@+id/fragment_picture_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_picture"
        android:layout_marginBottom="2.5dp"
        android:layout_marginHorizontal="@dimen/components_margin_small"
        app:layout_constraintTop_toTopOf="@id/fragment_picture_back_button"
        app:layout_constraintBottom_toBottomOf="@id/fragment_picture_back_button"
        app:layout_constraintStart_toEndOf="@id/fragment_picture_back_button" />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/Theme.ZPI.Text"
        android:id="@+id/fragment_picture_current_picture_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current_profile_picture"
        android:layout_marginTop="@dimen/components_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_picture_label" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/fragment_picture_current_image"
        android:layout_width="@dimen/image_small"
        android:layout_height="@dimen/image_small"
        android:layout_marginTop="@dimen/components_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_picture_current_picture_text"/>

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/Theme.ZPI.Text"
        android:id="@+id/fragment_picture_choose_picture_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_new_profile_picture"
        android:layout_marginTop="@dimen/components_margin_small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_picture_current_image" />

    <GridView
        android:id="@+id/fragment_picture_pictures_grid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/components_margin"
        android:gravity="center"
        android:horizontalSpacing="@dimen/components_margin_small"
        android:verticalSpacing="@dimen/components_margin_small"
        android:stretchMode="columnWidth"
        android:numColumns="auto_fit"
        android:columnWidth="@dimen/column_width"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_picture_choose_picture_text"
        app:layout_constraintBottom_toTopOf="@id/fragment_picture_info_icons" />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/Theme.ZPI.Text"
        android:id="@+id/fragment_picture_info_icons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/components_margin_small"
        android:text="@string/images_info"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>