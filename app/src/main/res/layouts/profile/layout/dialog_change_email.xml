<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/components_margin">

    <TextView
        style="@style/Theme.ZPI.Text"
        android:id="@+id/dialog_change_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/standard_text_size"
        android:justificationMode="inter_word"
        android:text="@string/change_email_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/Theme.ZPI.Text"
        android:id="@+id/dialog_change_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/components_margin_small"
        android:textSize="@dimen/dialog_text_size"
        android:text="@string/current_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_change_info" />

    <TextView
        style="@style/Theme.ZPI.Text"
        android:id="@+id/dialog_change_current_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/components_margin_tiny"
        android:textSize="@dimen/dialog_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_change_label"
        tools:text="email@gmail.com" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Theme.ZPI.TextInputLayout"
        android:id="@+id/dialog_change_input_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/components_margin_small"
        android:layout_marginHorizontal="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_change_current_email" >

        <com.google.android.material.textfield.TextInputEditText
            style="@style/Theme.ZPI.Text"
            android:id="@+id/dialog_change_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:gravity="top"
            android:hint="@string/new_email" />

    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>