<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.profile.StatsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/fragment_stats_back_button"
                android:layout_width="36sp"
                android:layout_height="36sp"
                android:layout_marginTop="@dimen/components_margin"
                android:layout_marginBottom="@dimen/components_margin_small"
                android:layout_marginHorizontal="@dimen/components_margin_small"
                android:contentDescription="@string/back"
                app:srcCompat="@drawable/icon_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                style="@style/Theme.ZPI.TextLabelBig"
                android:id="@+id/fragment_stats_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stats_label"
                android:layout_marginBottom="2.5dp"
                android:layout_marginHorizontal="@dimen/components_margin_small"
                app:layout_constraintTop_toTopOf="@id/fragment_stats_back_button"
                app:layout_constraintBottom_toBottomOf="@id/fragment_stats_back_button"
                app:layout_constraintStart_toEndOf="@id/fragment_stats_back_button" />

            <ImageView
                android:id="@+id/fragment_stats_app_icon"
                android:layout_width="@dimen/image_regular"
                android:layout_height="@dimen/image_regular"
                android:contentDescription="@string/app_icon_desc"
                android:layout_marginVertical="@dimen/components_margin"
                app:layout_constraintTop_toBottomOf="@id/fragment_stats_label"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:srcCompat="@drawable/app_icon" />

            <TextView
                style="@style/Theme.ZPI.AppName"
                android:id="@+id/fragment_stats_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBaseline_toBottomOf="@id/fragment_stats_app_icon" />

            <TextView
                style="@style/Theme.ZPI.TextLabel"
                android:textSize="@dimen/standard_text_size"
                android:id="@+id/fragment_stats_stories_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/stats_stories_label"
                android:layout_marginTop="@dimen/components_margin"
                android:layout_marginBottom="@dimen/components_margin_small"
                android:layout_marginHorizontal="@dimen/components_margin"
                app:layout_constraintTop_toBottomOf="@id/fragment_stats_app_name"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                style="@style/Theme.ZPI.Text"
                android:id="@+id/fragment_stats_stories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginHorizontal="@dimen/components_margin_tiny"
                app:layout_constraintTop_toTopOf="@id/fragment_stats_stories_label"
                app:layout_constraintLeft_toRightOf="@id/fragment_stats_stories_label" />

            <TextView
                style="@style/Theme.ZPI.TextLabel"
                android:textSize="@dimen/standard_text_size"
                android:id="@+id/fragment_stats_comments_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/stats_comments_label"
                android:layout_marginVertical="@dimen/components_margin_small"
                android:layout_marginHorizontal="@dimen/components_margin"
                app:layout_constraintTop_toBottomOf="@id/fragment_stats_stories_label"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                style="@style/Theme.ZPI.Text"
                android:id="@+id/fragment_stats_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginHorizontal="@dimen/components_margin_tiny"
                app:layout_constraintTop_toTopOf="@id/fragment_stats_comments_label"
                app:layout_constraintLeft_toRightOf="@id/fragment_stats_comments_label" />

            <TextView
                style="@style/Theme.ZPI.TextLabel"
                android:textSize="@dimen/standard_text_size"
                android:id="@+id/fragment_stats_comments_by_other_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/stats_comments_by_other_label"
                android:layout_marginVertical="@dimen/components_margin_small"
                android:layout_marginHorizontal="@dimen/components_margin"
                app:layout_constraintTop_toBottomOf="@id/fragment_stats_comments_label"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                style="@style/Theme.ZPI.Text"
                android:id="@+id/fragment_stats_comments_by_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginHorizontal="@dimen/components_margin_tiny"
                app:layout_constraintTop_toTopOf="@id/fragment_stats_comments_by_other_label"
                app:layout_constraintLeft_toRightOf="@id/fragment_stats_comments_by_other_label" />

            <TextView
                style="@style/Theme.ZPI.TextLabel"
                android:textSize="@dimen/standard_text_size"
                android:id="@+id/fragment_stats_favourites_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/stats_favourites_label"
                android:layout_marginVertical="@dimen/components_margin_small"
                android:layout_marginHorizontal="@dimen/components_margin"
                app:layout_constraintTop_toBottomOf="@id/fragment_stats_comments_by_other_label"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                style="@style/Theme.ZPI.Text"
                android:id="@+id/fragment_stats_favourites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginHorizontal="@dimen/components_margin_tiny"
                app:layout_constraintTop_toTopOf="@id/fragment_stats_favourites_label"
                app:layout_constraintLeft_toRightOf="@id/fragment_stats_favourites_label" />

            <TextView
                style="@style/Theme.ZPI.TextLabel"
                android:textSize="@dimen/standard_text_size"
                android:id="@+id/fragment_stats_favourites_by_other_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/stats_favourites_by_other_label"
                android:layout_marginVertical="@dimen/components_margin_small"
                android:layout_marginHorizontal="@dimen/components_margin"
                app:layout_constraintTop_toBottomOf="@id/fragment_stats_favourites_label"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                style="@style/Theme.ZPI.Text"
                android:id="@+id/fragment_stats_favourites_by_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginHorizontal="@dimen/components_margin_tiny"
                app:layout_constraintTop_toTopOf="@id/fragment_stats_favourites_by_other_label"
                app:layout_constraintLeft_toRightOf="@id/fragment_stats_favourites_by_other_label" />

            <TextView
                style="@style/Theme.ZPI.TextLabel"
                android:textSize="@dimen/standard_text_size"
                android:id="@+id/fragment_stats_rated_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/stats_rated_label"
                android:layout_marginVertical="@dimen/components_margin_small"
                android:layout_marginHorizontal="@dimen/components_margin"
                app:layout_constraintTop_toBottomOf="@id/fragment_stats_favourites_by_other_label"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                style="@style/Theme.ZPI.Text"
                android:id="@+id/fragment_stats_rated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginHorizontal="@dimen/components_margin_tiny"
                app:layout_constraintTop_toTopOf="@id/fragment_stats_rated_label"
                app:layout_constraintLeft_toRightOf="@id/fragment_stats_rated_label" />

            <TextView
                style="@style/Theme.ZPI.TextLabel"
                android:textSize="@dimen/standard_text_size"
                android:id="@+id/fragment_stats_avg_words_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/stats_avg_words_label"
                android:layout_marginVertical="@dimen/components_margin_small"
                android:layout_marginHorizontal="@dimen/components_margin"
                app:layout_constraintTop_toBottomOf="@id/fragment_stats_rated_label"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                style="@style/Theme.ZPI.Text"
                android:id="@+id/fragment_stats_avg_words"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginHorizontal="@dimen/components_margin_tiny"
                app:layout_constraintTop_toTopOf="@id/fragment_stats_avg_words_label"
                app:layout_constraintLeft_toRightOf="@id/fragment_stats_avg_words_label" />

            <TextView
                style="@style/Theme.ZPI.TextLabel"
                android:textSize="@dimen/standard_text_size"
                android:id="@+id/fragment_stats_words_count_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/stats_words_count_label"
                android:layout_marginVertical="@dimen/components_margin_small"
                android:layout_marginHorizontal="@dimen/components_margin"
                app:layout_constraintTop_toBottomOf="@id/fragment_stats_avg_words_label"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                style="@style/Theme.ZPI.Text"
                android:id="@+id/fragment_stats_words_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginHorizontal="@dimen/components_margin_tiny"
                app:layout_constraintTop_toTopOf="@id/fragment_stats_words_count_label"
                app:layout_constraintLeft_toRightOf="@id/fragment_stats_words_count_label" />

            <TextView
                style="@style/Theme.ZPI.TextLabel"
                android:textSize="@dimen/standard_text_size"
                android:id="@+id/fragment_stats_streak_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/stats_streak_label"
                android:layout_marginVertical="@dimen/components_margin_small"
                android:layout_marginHorizontal="@dimen/components_margin"
                app:layout_constraintTop_toBottomOf="@id/fragment_stats_words_count_label"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                style="@style/Theme.ZPI.Text"
                android:id="@+id/fragment_stats_streak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginHorizontal="@dimen/components_margin_tiny"
                app:layout_constraintTop_toTopOf="@id/fragment_stats_streak_label"
                app:layout_constraintLeft_toRightOf="@id/fragment_stats_streak_label" />

            <TextView
                style="@style/Theme.ZPI.TextLabel"
                android:textSize="@dimen/standard_text_size"
                android:id="@+id/fragment_stats_minigame_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/stats_minigame_label"
                android:layout_marginVertical="@dimen/components_margin_small"
                android:layout_marginHorizontal="@dimen/components_margin"
                app:layout_constraintTop_toBottomOf="@id/fragment_stats_streak"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                style="@style/Theme.ZPI.Text"
                android:id="@+id/fragment_stats_minigame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginHorizontal="@dimen/components_margin_tiny"
                app:layout_constraintTop_toTopOf="@id/fragment_stats_minigame_label"
                app:layout_constraintLeft_toRightOf="@id/fragment_stats_minigame_label" />

            <TextView
                style="@style/Theme.ZPI.TextLabel"
                android:textSize="@dimen/standard_text_size"
                android:id="@+id/fragment_stats_stories_per_genre_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/stats_stories_per_genre_label"
                android:layout_marginVertical="@dimen/components_margin_small"
                android:layout_marginHorizontal="@dimen/components_margin"
                app:layout_constraintTop_toBottomOf="@id/fragment_stats_minigame_label"
                app:layout_constraintLeft_toLeftOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/stories_per_genre_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/components_margin_big"
                android:layout_marginVertical="@dimen/components_margin_small"
                android:scrollbars="vertical"
                app:layoutManager="LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fragment_stats_stories_per_genre_label"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:listitem="@layout/stories_per_genre_item" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>