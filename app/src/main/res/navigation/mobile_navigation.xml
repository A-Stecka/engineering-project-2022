<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.zpi.view.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_community">
        <action
            android:id="@+id/action_navigation_home_to_writeFragment"
            app:destination="@id/writeFragment"
            app:launchSingleTop="false"
            app:popUpTo="@id/navigation_home"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_navigation_home_to_readYourStoryFragment"
            app:destination="@id/readYourStoryFragment"
            app:popUpTo="@id/navigation_home"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/navigation_community"
        android:name="com.zpi.view.community.CommunityFragment"
        android:label="@string/title_community"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_community_to_readOtherStoryFragment"
            app:destination="@id/readOtherStoryFragment"
            app:popUpTo="@id/navigation_community"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.zpi.view.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_navigation_profile_to_changePictureFragment"
            app:destination="@id/changePictureFragment"
            app:popUpTo="@id/navigation_profile"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_navigation_profile_to_statsFragment"
            app:destination="@id/statsFragment"
            app:popUpTo="@id/navigation_profile"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_navigation_profile_to_favouritesFragment"
            app:destination="@id/favouritesFragment"
            app:popUpTo="@id/navigation_profile"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_navigation_profile_to_aboutFragment"
            app:destination="@id/aboutFragment"
            app:popUpTo="@id/navigation_profile"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/changePictureFragment"
        android:name="com.zpi.view.profile.ChangePictureFragment"
        android:label="Change picture"
        tools:layout="@layout/fragment_change_picture">
        <action
            android:id="@+id/action_changePictureFragment_to_navigation_profile"
            app:destination="@id/navigation_profile" />
    </fragment>

    <fragment
        android:id="@+id/writeFragment"
        android:name="com.zpi.view.home.WriteFragment"
        android:label="Write story"
        tools:layout="@layout/fragment_write">
        <action
            android:id="@+id/action_writeFragment_to_navigation_home"
            app:destination="@id/navigation_home"
            app:popUpTo="@id/navigation_home" />
    </fragment>

    <fragment
        android:id="@+id/readYourStoryFragment"
        android:name="com.zpi.view.story.ReadYourStoryFragment"
        android:label="Read story"
        tools:layout="@layout/fragment_read_story">
        <action
            android:id="@+id/action_readYourStoryFragment_to_navigation_home"
            app:destination="@id/navigation_home"
            app:popUpTo="@id/navigation_home" />
    </fragment>

    <fragment
        android:id="@+id/statsFragment"
        android:name="com.zpi.view.profile.StatsFragment"
        android:label="Your statistics"
        tools:layout="@layout/fragment_stats" >
        <action
            android:id="@+id/action_statsFragment_to_navigation_profile"
            app:destination="@id/navigation_profile" />
    </fragment>

    <fragment
        android:id="@+id/favouritesFragment"
        android:name="com.zpi.view.profile.FavouritesFragment"
        android:label="fragment_favourites"
        tools:layout="@layout/fragment_favourites" >
        <action
            android:id="@+id/action_favouritesFragment_to_navigation_profile"
            app:destination="@id/navigation_profile" />
        <action
            android:id="@+id/action_favouritesFragment_to_readOtherStoryFragment"
            app:destination="@id/readOtherStoryFragment" />
    </fragment>

    <fragment
        android:id="@+id/readOtherStoryFragment"
        android:name="com.zpi.view.story.ReadOtherStoryFragment"
        android:label="ReadOtherStoryFragment"
        tools:layout="@layout/fragment_read_story">
        <action
            android:id="@+id/action_readOtherStoryFragment_to_navigation_community"
            app:destination="@id/navigation_community" />
        <action
            android:id="@+id/action_readOtherStoryFragment_to_favouritesFragment"
            app:destination="@id/favouritesFragment"
            app:popUpTo="@id/favouritesFragment" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.zpi.view.profile.AboutFragment"
        android:label="fragment_about"
        tools:layout="@layout/fragment_about" >
        <action
            android:id="@+id/action_aboutFragment_to_navigation_profile"
            app:destination="@id/navigation_profile" />
    </fragment>
    <fragment
        android:id="@+id/navigation_game"
        android:name="com.zpi.view.game.GameMainFragment"
        android:label="navigation_game"
        tools:layout="@layout/navigation_game" >
        <action
            android:id="@+id/action_navigation_game_to_gameFragment"
            app:destination="@id/gameFragment" />
    </fragment>

    <action android:id="@+id/action_global_navigation_home" app:destination="@id/navigation_home" />
    <action
        android:id="@+id/action_global_navigation_community"
        app:destination="@id/navigation_community" />
    <action android:id="@+id/action_global_navigation_game" app:destination="@id/navigation_game" />
    <action
        android:id="@+id/action_global_navigation_profile"
        app:destination="@id/navigation_profile" />
    <fragment
        android:id="@+id/gameFragment"
        android:name="com.zpi.view.game.GameFragment"
        android:label="game_fragment"
        tools:layout="@layout/game_fragment" >
        <action
            android:id="@+id/action_gameFragment_self"
            app:destination="@id/gameFragment"
            app:popUpToInclusive="@id/gameFragment" />
        <action
            android:id="@+id/action_gameFragment_to_navigation_game"
            app:destination="@id/navigation_game"
            app:popUpToInclusive="@id/navigation_game"/>
    </fragment>

</navigation>