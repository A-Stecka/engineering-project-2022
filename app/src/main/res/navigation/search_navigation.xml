<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_navigation"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.zpi.view.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_readOtherStoryFragmentSearch"
            app:destination="@id/readOtherStoryFragmentSearch"
            app:popUpTo="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/readOtherStoryFragmentSearch"
        android:name="com.zpi.view.story.ReadOtherStoryFragment"
        android:label="ReadOtherStoryFragment"
        tools:layout="@layout/fragment_read_story">
        <action
            android:id="@+id/action_readOtherStoryFragmentSearch_to_searchFragment"
            app:destination="@id/searchFragment"
            app:popUpTo="@id/searchFragment" />
    </fragment>
</navigation>